<!DOCTYPE html>
<html data-bs-theme="auto">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Siganushka Admin{% endblock %}</title>
    {% block stylesheets %}
    {% endblock %}

    {% block javascripts %}
      {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
  </head>
  <body class="d-flex flex-column vh-100">
    {% block body %}
      <nav class="navbar navbar-expand-md navbar-dark bg-dark shadow">
        <div class="container-fluid">
          {% block logo %}
          <span class="navbar-brand d-none d-md-block">
            <i class="bi bi-bootstrap-fill me-2"></i> Dashboard
          </span>
          {% endblock %}

          <button class="navbar-toggler d-md-none px-2" type="button" data-bs-toggle="offcanvas" data-bs-target="aside .offcanvas-md" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle Sidebar">
            <span class="navbar-toggler-icon"></span>
          </button>

          {% block navbar %}
            {{ knp_menu_render('navbar', {depth: 2}) }}
          {% endblock %}
        </div>
      </nav>

      <div class="d-flex flex-grow-1 overflow-hidden">
        <aside class="bg-dark-subtle position-relative shadow{{ app.request.cookies.has(siganushka_admin_collapse_cookie) ? ' collapsed' : null }}" {{ stimulus_controller('siganushka-admin-collapse', {cookie: siganushka_admin_collapse_cookie}) }}>
          <div class="offcanvas-md offcanvas-start h-100 overflow-hidden overflow-y-auto" tabindex="-1" aria-labelledby="sidebarMenuLabel">
            <div class="offcanvas-body d-md-flex flex-column p-2">
              {% block sidebar %}
                {{ knp_menu_render('sidebar', {depth: 3}) }}
              {% endblock %}
            </div>
          </div>

          <button class="btn border-0 position-absolute bottom-0 end-0 text-dark-emphasis m-2" {{ stimulus_action('siganushka-admin-collapse', 'collapsed') }}>
            <i class="bi bi-text-indent-right"></i>
          </button>
        </aside>

        <main class="flex-grow-1 overflow-auto p-3">
          {% block flashes %}
            {% for label, messages in app.flashes %}
              {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                  {{ message }}
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
              {% endfor %}
            {% endfor %}
          {% endblock %}

          {% block main %}{% endblock %}
        </main>
      </div>
    {% endblock %}
  </body>
</html>
