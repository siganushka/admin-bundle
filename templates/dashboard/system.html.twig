{% block system %}
<div class="card">
  <h3 class="card-header">{{ 'siganushka_admin.dashboard.system'|trans }}</h3>
  <ul class="list-group list-group-flush">
    <li class="list-group-item d-flex justify-content-between align-items-center">
      {{ 'siganushka_admin.dashboard.system.platform'|trans }}
      <span>{{ platform }}</span>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      {{ 'siganushka_admin.dashboard.system.server'|trans }}
      <span>{{ server }}</span>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      {{ 'siganushka_admin.dashboard.system.database'|trans }}
      <span>{{ database }}</span>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      {{ 'siganushka_admin.dashboard.system.php'|trans }}
      <span>{{ php }}</span>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      {{ 'siganushka_admin.dashboard.system.symfony'|trans }}
      <span>
        {% set symfony_state_class = {eom: 'warning', eol: 'danger'} %}
        {% if symfonyState in symfony_state_class|keys %}
          <span class="badge rounded-pill text-bg-{{ symfony_state_class[symfonyState] }}">{{ ('siganushka_admin.dashboard.system.symfony.state_' ~ symfonyState)|trans }}</span>
        {% endif %}
        <a href="{{ symfonyUrl }}" class="text-decoration-none" target="_blank">{{ symfony }}</a>
      </span>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      {{ 'siganushka_admin.dashboard.system.environment'|trans }}
      <span>
        {% if debug %}
          <span class="badge rounded-pill text-bg-danger">{{ 'siganushka_admin.dashboard.system.debug'|trans }}</span>
        {% endif %}
        {% set environment_class = {dev: 'danger', test: 'warning', prod: 'success'} %}
        <span class="badge rounded-pill text-bg-{{ environment_class[environment] ?? 'secondary' }}">
          {{ ('siganushka_admin.dashboard.system.environment.' ~ environment)|trans }}
        </span>
      </span>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      {{ 'siganushka_admin.dashboard.system.support'|trans }}
      <a href="mailto: siganushka@gmail.com" class="text-decoration-none">Siganushka (siganushka@gmail.com)</a>
    </li>
  </ul>
</div>
{% endblock %}
