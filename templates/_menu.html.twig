{% extends '@KnpMenu/menu.html.twig' %}

{% block spanElement %}
  {% import _self as knp_menu %}
  <a{{ knp_menu.attributes(item.labelAttributes) }}>{{ block('label') }}</a>
{% endblock %}

{% block label %}
  {% set icon = item.getExtra('icon') %}

  {% if icon %}
    <i class="bi bi-{{ icon }}"></i>
  {% endif %}

  <span class="text-truncate">{{ parent() }}</span>
{% endblock %}
