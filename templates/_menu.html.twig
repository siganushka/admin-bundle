{% extends '@KnpMenu/menu.html.twig' %}

{% block spanElement %}
  {% import _self as knp_menu %}
  <a{{ knp_menu.attributes(item.linkAttributes) }}>{{ block('label') }}</a>
{% endblock %}

{% block label %}
  {% set img = item.getExtra('img') %}
  {% set icon = item.getExtra('icon') %}

  {% if img %}
    <img src="{{ img }}" width="24" height="24" class="rounded-circle me-2">
  {% endif %}

  {% if icon %}
    <i class="bi bi-{{ icon }} me-2"></i>
  {% endif %}

  {% if item.getExtra('show_label', true) is same as(true) %}
    <span class="text-truncate">{{ parent() }}</span>
  {% endif %}
{% endblock %}
